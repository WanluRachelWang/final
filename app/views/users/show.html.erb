<style>
  .media-pic{
    height: 100px;
  }

  .post-pic{
    height: 64px;
  }

  .post-heading{
    color: darkgray;
  }

  .reply-pic{
    height: 30px;
  }

  .restaurant-name{
    text-align: left;
    font-weight: bold;
  }

  .img-thumbnail{
    width: 100%;
  }

  

</style>
<p><%= @user.nick_name %></p>
<%= image_tag @user.profile_pic_path, :class => "media-object reply-pic img-rounded" %>

<% if session[:user_id] != @user.id %>
	<p><%= link_to "Follow", follow_url(@user.id) %></p>
<% end %>

<% if session[:user_id] == @user.id %>
	<p><%= link_to "Edit", edit_user_url(@user.id) %></p>
<% end %>
<p><%= link_to "Friends #{@user.friendships.count}", "#" %></p>
<p><%= link_to "Follower #{@user.followeeships.count}", "#" %></p>
<p><%= link_to "Follow #{@user.followships.count}", "#" %></p>
<% if @user.tags %>
  <% @user.tags.each do |tag| %>
    <%= tag %>
  <% end %>
<% end %>
<div class="row">

    <!-- Posts and replies-->
    <div class="col-md-8">
      <% if @user.posts %>
        <% @user.posts.each do |post| %>
          <% restaurant = post.restaurant %>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="media">
                <div class="media-left">
                  <a href="#">
                    <%= image_tag "default-user-image.png", :class => "media-object post-pic img-rounded" %>
                  </a>
                </div>
                <div class="media-body">
                  <h6 class="media-heading post-heading">
                    <%= @user.nick_name %> sent a post on:<%= post.post_time %>
                    <% if @user && @user.id == post.user_id  %>
                      (<%= link_to "Delete", "/posts/#{post.id}", :method => 'delete' %>)
                    <% end %>
                  </h6>
                  <h5 class="">
                    <!-- restaurant name-->
                    <a href="#"><%= restaurant.name %></a>

                    <!-- rating-->
                    <% post.rating.times do %>
                      &#9733;
                    <% end %>

                    <% (5 - post.rating).times do %>
                      &#9734;
                    <% end %>

                  </h5>
                  <%= post.post_text %>
                </div>
              </div>
            </div>

            <div class="panel-footer">
              <%= link_to "Like", "/posts/likes/#{post.id}", :method => 'get' %> 
              
              (<%= Like.where(post_id:post.id).count  %>)

              
              
              <a data-toggle="collapse" href="#collapse-<%= post.id %>" aria-expanded="false" aria-controls="#collapse-<%= post.id %>">
                Comments(<%= post.replies.count%>)
              </a>

              <!-- reply list-->
              <ul class="media-list collapse" id = "collapse-<%= post.id %>">

                <% post.replies.each do |reply| %>
                  <li class="media">
                    <div class="media-left">
                      <a href="#">
                        <%= image_tag "default-user-image.png", :class => "media-object reply-pic img-rounded" %>
                      </a>
                    </div>
                    <div class="media-body">
                      <%= link_to "@#{reply.user.nick_name}:", "#" %><%= reply.content %>
                      <h6 class="media-heading post-heading">
                        Replied on: <%= reply.time %>

                        <% if @user && @user.id == reply.user_id  %>
                          (<%= link_to "Delete", "/replies/#{reply.id}", :method => 'delete' %>)
                        <% end %>

                      </h6>
                    </div>
                  </li>
                <% end %>
              </ul>

              
            
          </div>
        <% end %>
      <% end %>
    </div>